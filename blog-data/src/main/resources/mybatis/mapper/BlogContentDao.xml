<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.jxufe.dao.BlogContentDao">

    <select id="selectContentByBlogId" resultType="cn.jxufe.bean.BlogContent">
        select *
        from blog_content
        where blog_id = #{blogId}
        limit 1;
    </select>
    <insert id="insertBlogContent">
        insert into blog_content value (#{blogId}, #{content})
    </insert>
    <delete id="deleteBlogByBlogId">
        delete
        from blog_content
        where blog_id = #{blogId}
        limit 1
    </delete>

    <update id="updateBlogContentById">
        update blog_content
        set content = #{content}
        where blog_id = #{blogId}
        limit 1
    </update>

</mapper>