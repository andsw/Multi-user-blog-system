<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="cn.jxufe.dao.CorpusDao">    <select id="selectCorpusByUserId" resultType="cn.jxufe.entity.Corpus">        select *        from corpus        where user_id = #{userId}    </select>    <select id="selectExistByCorpusId" resultType="java.lang.Boolean">        select count(*)        from corpus        where id = #{corpusId}        limit 1    </select>    <select id="selectSimpleInfoByUserId" resultType="cn.jxufe.entity.Corpus">        select id, name        from corpus        where user_id = #{userId}    </select>    <delete id="deleteByCorpusId">        delete        from corpus        where id = #{corpusId}        limit 1    </delete>    <insert id="insertCorpus" useGeneratedKeys="true" keyProperty="id">        insert into corpus(name, user_id)            value (#{name}, #{userId});    </insert>    <update id="updateCorpusName">        update corpus        set name=#{name}        where id = #{id}        limit 1    </update>    <select id="selectCorpusCountByUserId" resultType="java.lang.Integer">        select count(*)        from corpus        where user_id = #{userId}    </select>    <update id="increaseBlogNumWhenWrite">        update corpus        set blog_num = blog_num + #{n}        where id = #{corpusId}    </update></mapper>