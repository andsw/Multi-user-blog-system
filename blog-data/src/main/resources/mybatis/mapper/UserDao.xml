<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.jxufe.dao.UserDao">

  <!-- customize -->
  <select id="selectByUserId" parameterType="Integer" resultType="cn.jxufe.bean.User">
    select id,
           email,
           username,
           avatar,
           person_msg,
           gender,
           blog_num,
           corpus_num,
           word_num,
           sub_num,
           fan_num,
           register_at
    from user
    where id = ${userId}
    limit 1
  </select>

  <insert id="insertNewUser" parameterType="cn.jxufe.bean.User">
    insert into user(email, password, salt, username)
    values ('${email}', '${password}', '${salt}', '${username}')
  </insert>

  <!-- auto generate -->
  <resultMap id="BaseResultMap" type="cn.jxufe.bean.User">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="email" jdbcType="VARCHAR" property="email" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="username" jdbcType="VARCHAR" property="username" />
    <result column="avatar" jdbcType="VARCHAR" property="avatar" />
    <result column="person_msg" jdbcType="VARCHAR" property="personMsg" />
    <result column="gender" jdbcType="BIT" property="gender" />
    <result column="blog_num" jdbcType="INTEGER" property="blogNum" />
    <result column="corpus_num" javaType="INTEGER" property="corpusNum"/>
  </resultMap>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from user
    where id = #{id,jdbcType=INTEGER}
    limit 1
  </delete>
</mapper>